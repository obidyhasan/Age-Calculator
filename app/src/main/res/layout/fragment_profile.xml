<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">


    <LinearLayout
        android:background="@color/card1"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:background="@drawable/image_round"
            android:id="@+id/profileImageId"
            android:src="@drawable/avatar_4"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="90dp"
            android:layout_height="90dp"/>


        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profileNameId"
                android:textSize="19sp"
                android:text="Guest"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/profileSubjectTextId"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="Birthday : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/profileDayId"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="-"
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/profileMonthId"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="-"
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/profileYearId"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!-- Edit Profile Layout Start -->
            <RelativeLayout
                android:id="@+id/editProfileLayoutId"
                android:background="@drawable/profile_layout_ripple"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <ImageView
                    android:id="@+id/editIconId"
                    android:src="@drawable/ic_edit"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginStart="18sp"
                    android:layout_toEndOf="@+id/editIconId"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:src="@drawable/ic_next"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>




            <!-- Rate It Layout Start -->
            <RelativeLayout
                android:id="@+id/rateItLayoutId"
                android:background="@drawable/profile_layout_ripple"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <ImageView
                    android:id="@+id/rateIconId"
                    android:src="@drawable/ic_rate"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18sp"
                    android:layout_toEndOf="@+id/rateIconId"
                    android:text="@string/rate_it"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ImageView
                    android:src="@drawable/ic_next"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



            <!-- Share Layout Start -->
            <RelativeLayout
                android:id="@+id/shareLayoutId"
                android:background="@drawable/profile_layout_ripple"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <ImageView
                    android:id="@+id/shareIconId"
                    android:src="@drawable/ic_share"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginStart="18sp"
                    android:layout_toEndOf="@+id/shareIconId"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:src="@drawable/ic_next"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



            <!-- Privacy Policy Layout Start -->
            <RelativeLayout
                android:id="@+id/privacyPolicyLayoutId"
                android:background="@drawable/profile_layout_ripple"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <ImageView
                    android:id="@+id/privacyIconId"
                    android:src="@drawable/ic_privacy"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginStart="18sp"
                    android:layout_toEndOf="@+id/privacyIconId"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:src="@drawable/ic_next"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>






</LinearLayout>