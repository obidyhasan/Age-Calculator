<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="20dp"
    android:layout_margin="10dp"
    android:background="@drawable/person_add_ripple"
    android:id="@+id/addPersonItemLayoutId"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/personItemImgId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/image_round"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_4" />


    <LinearLayout
        android:layout_toStartOf="@+id/itemNextLayoutId"
        android:layout_toEndOf="@id/personItemImgId"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:id="@+id/personItemNameId"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Obidy Hasan Naim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:background="@drawable/shep_1"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>



                <TextView
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:id="@+id/personItemSubjectId"
                    android:textSize="16sp"
                    android:text="Birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>






            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shep_2"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>




                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/personItemDayId"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="-"
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/personItemMonthId"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="-"
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/personItemYearId"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/itemNextLayoutId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">


        <ImageView
            android:src="@drawable/ic_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>



</RelativeLayout>